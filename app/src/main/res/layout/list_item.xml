<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/element_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/tears_angels" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/element_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Restaurant Name Test" />

            <TextView
                android:id="@+id/element_desc_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Restaurant Description Test" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>